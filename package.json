{
  "name": "course-assigment",
  "version": "0.1.0",
  "description": "Kursinl√§mnings intruktioner nedan:",
  "main": "public/index.html",
  "author": "Johan Andersson, Peter Ryden, Andres Parra, Lucas Abrahams",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "copy:pictures": "copyfiles -u 1 ./src/pictures/**/* public",
    "copy:pages": "copyfiles -u 1 ./src/pages/*.html public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:pictures": "onchange \"src/pictures/**/*\" -- npm run copy:pictures",
    "watch:pages": "onchange \"src/pages/*.html\" -- npm run copy:html",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresparrab/course-assigment.git"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "bootstrap": "^5.2.1",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.54.9"
  }
}
